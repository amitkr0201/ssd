<html>
<head>
<script src="//code.jquery.com/jquery-1.11.3.min.js" type="text/javascript"></script>
<script>
function add(){
  // console.log($("#json").val());
	// $.post("/ssd/add",$("#json").val(),"json");
  $.ajax({
    method: "POST",
    url: "/ssd/add",
    data: $("#json").val(),
    dataType: "json",
    contentType: "application/json"
  });
};
function update(){
	var deploymentID = $("#deploymentIDText").val();
	var deploymentStatusVal = $('input[name=deploymentStatus]:checked', '#updateDeploymentStatus').attr("id");
	var deploymentStatus = $("label[for='"+deploymentStatusVal+"']").text();
	$.ajax({
		url: "/ssd/update/"+deploymentID+"/"+deploymentStatus,
		type: "PUT"
	});
};
</script>
</head>
<title>
	Page to insert update deployment request JSON
</title>
<body>
	<textarea id="json" style="height: 50%; width: 95%;"></textarea>
	<a id="addJSON" href="#" onclick="add()"><div style="padding-bottom: 10px;">Click to add JSON</div></a>
	<form id="updateDeploymentStatus">
		<label for="deploymentIDText" style="padding-right: 5px;">Deployment ID</label><input type="text" id="deploymentIDText"><br></span>
		<label for="deploymentStatusTextPass">success</label><input type="radio" name="deploymentStatus" id="deploymentStatusTextPass"><label for="deploymentStatusTextFail">failure</label><input type="radio" name="deploymentStatus" id="deploymentStatusTextFail"><br></span>
		<a id="updateStatus" href="#" onclick="update()"><div style="padding-top: 5px;">Click to update status</div></a>
	</form>
</body>
</html>
